{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center" style="margin: 30px 0;">Kapcsolatfelvételi Űrlap</h1>

<div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            {% if ( label == 'success' ) %}
                <div class="alert alert-success ">
                    {{ flash }}
                </div>
            {% elseif ( label == 'error' ) %}
                <div class="alert alert-danger">
                    {{ flash }}
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}
    {{ form(contact) }}
    </div>
    <div class="col-md-2">

    </div>
</div>

{% endblock %}
